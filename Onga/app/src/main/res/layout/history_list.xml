<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingBottom="20sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:id="@+id/thumbnail">
        
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="img"
            android:src="@drawable/ic_restaurant_menu"/>

    </LinearLayout>

    <TextView
        android:id="@+id/list_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="#000"
        android:typeface="sans"
        android:textSize="16sp"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="meal name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_meal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:textColor="#000"
        android:typeface="monospace"
        android:textSize="14sp"
        android:layout_below="@id/list_meal_name"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="meal price"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/list_meal_name"
        android:gravity="end"
        android:typeface="serif"
        android:textColor="#000"
        android:textSize="12sp"
        android:layout_marginEnd="5sp"
        android:layout_marginRight="5dip"
        android:text="order date" />

    <TextView
        android:id="@+id/list_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_order_date"
        android:gravity="end"
        android:typeface="serif"
        android:paddingTop="6dip"
        android:textColor="#000"
        android:textSize="12sp"
        android:layout_marginEnd="5sp"
        android:layout_marginRight="5dip"
        android:text="order time" />

</RelativeLayout>